<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.example.volks.cypher.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_title_string"
        android:text="@string/main_screen_Title"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold|italic"
        android:textColor="@color/main_title_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ceaser"
        android:text="@string/ceaser_link"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/Links_padding"
        android:textSize="@dimen/links_size"
        android:onClick="startCeaserCipher"/>

</LinearLayout>
